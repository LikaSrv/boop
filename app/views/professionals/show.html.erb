<div>
  <%= link_to 'Back', :back %>
</div>
<div class="text-center m-4">
  <h1><%= @professional.name %></h1>
  <p><%= @professional.specialty%></p>
</div>
<div class="grid-professional-show">
  <div class="m-4">
    <div style="margin: 8px;" class="text-center">
      <%= cl_image_tag @professional.photo.key, width: 400, crop: :fill%>
    </div>
    <div class="card_pro">
      <h4>Contact : </h4>
      <p>Adresse : <%=@professional.address%></p>
      <p>Numéro de téléphone : <%=@professional.phone%></p>
    </div>
    <div class="card_pro">
      <h4>Description : </h4>
      <p><%=@professional.description%></p>
    </div>
    <div class="card_pro">
      <div class="d-flex flex-row justify-content-between">
        <h4>Les avis : </h4>
        <div class="d-flex flex-row align-items-center">
          <% @professional.rating.times do %>
            <i class="fas fa-star text-warning m-0"></i>
          <% end %>
          <p class="m-0 mx-1">(<%=@reviews.count%>)</p>
        </div>
      </div>
      <div class="d-flex flex-row justify-content-between m-2">
        <% @reviews.each do |review| %>
          <p><%= review.content %></p>
          <p><%= review.rating %></p>
        <% end %>
      </div>
    </div>
  </div>
  <%= render "available_slots", professional: @professional%>
</div>
