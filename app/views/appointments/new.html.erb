<div>
  <%= link_to 'Retour', :back %>
</div>
<div class="text-center">
  <h1>Confirmation du rendez-vous</h1>
</div>
<div class="container text-center shadow-lg p-3 mb-5 bg-body-tertiary rounded">
  <%= simple_form_for [@professional, Appointment.new] do |a| %>
    <div class="card d-flex flex-column mb-3">
      <div class="card-header">
        <i class="fa-regular fa-user"></i>
        <p> Le vétérinaire :</p>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%=@professional.name%></h5>
      </div>
    </div>
    <div class="card d-flex flex-column mb-3">
      <div class="card-header">
        <i class="fa-regular fa-calendar"></i>
        <p> Date du rendez-vous:</p>
      </div>
      <div class="card-body">
        <h5>
          <%= a.input :date, as: :string, input_html: { value: @date, readonly: true, style: 'border: none; text-align: center;'  }, label: false %>
        </h5>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <i class="fa-regular fa-clock"></i>
        <p> Heure du rendez-vous:</p>
      </div>
      <div class="card-body">
        <h5>
          <%= a.input :start_time, as: :string, input_html: { value: @time, readonly: true, style: 'border: none; text-align: center'  }, label: false %>
        </h5>
      </div>
    </div>
    <%= a.button :submit, "Confirmer le rendez-vous", class: "btn btn-primary my-4 rounded rounded-4" %>
  <% end %>
</div>

